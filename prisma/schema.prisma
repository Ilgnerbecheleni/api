generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
USER
ADMIN
}


model Usuario {
id Int @id @default(autoincrement())
nome String
email String @unique
passwordHash String
verificado Boolean @default(false)
role Role @default(USER)
criadoEm DateTime @default(now())
atualizadoEm DateTime @updatedAt
tokens VerificationToken[]
mqttUser      MqttUser?         // deixe opcional para evitar ciclo de obrigatoriedade
}



model VerificationToken {
id Int @id @default(autoincrement())
token String @unique
userId Int
user Usuario @relation(fields: [userId], references: [id], onDelete: Cascade)
expiresAt DateTime
usedAt DateTime?
createdAt DateTime @default(now())


@@index([userId])
}

model MqttUser {
  id        Int      @id @default(autoincrement())
  username  String   @unique    // geralmente queremos Ãºnico pro login do MQTT
  password  String

  userId    Int      @unique
  user      Usuario  @relation(fields: [userId], references: [id], onDelete: Cascade)
}